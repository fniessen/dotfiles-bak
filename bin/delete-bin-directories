#!/usr/bin/env bash

# Recursively delete all directories named "bin" in the current directory and
# its subdirectories, except those located in "./schema".

# TODO: Is the 'clean' target not good enough?

# Exclude the 'schema' directory in 'find' command (Don't delete folders such as
# `./schema/ab-products/common/mobile/src/build').
find . -type d -iname "bin" -not -path "./schema/*" -print0 \
    | xargs -0 -I {} sh -c 'echo "Deleting {}"; rm -rf {}'
